<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Edit Restaurant</h5>
          <hr>
          <form method="POST" action="/restaurants">
            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">
                Name
              </label>
              <div class="col-md-8">
                <input type="string" name="name" class="form-control" id="name" value="{{restaurant.name}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                Category
              </label>
              <div class="col-md-8">
                <input type="string" name="category" class="form-control" id="category" value="{{restaurant.category}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">
                Image
              </label>
              <div class="col-md-8">
                <input type="string" name="image" class="form-control" id="image" value="{{restaurant.image}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">
                Location
              </label>
              <div class="col-md-8">
                <input type="string" name="location" class="form-control" id="location" value="{{restaurant.location}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">
                Phone
              </label>
              <div class="col-md-8">
                <input type="string" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="google_map" class="col-md-4 col-form-label">
                Google_map
              </label>
              <div class="col-md-8">
                <input type="string" name="google_map" class="form-control" id="google_map"
                  value="{{restaurant.google_map}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">
                Rating
              </label>
              <div class="col-md-8">
                <input type="number" step="0.1" name="rating" class="form-control" id="rating" min="0" max="5"
                  value="{{restaurant.rating}}" required>
                <small>range: 0 - 5</small>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                Description
              </label>
              <div class="col-md-8">
                <input type="string" name="description" class="form-control" id="description"
                  value="{{restaurant.description}}" required>
              </div>
            </div>

            <button class="btn btn-success" type="submit">New Restaurant</button>
            <a href="/restaurants/{{restaurant._id}}">back</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>